---
import Container from '../components/Container.astro';
---

<footer class="footer">
  <Container>
    <div class="footer__inner">
      <p class="footer__text">
        本サービスは<a href="https://www.tcs-reform.co.jp/" target="_blank">有限会社トータルクリーンサービス</a>によるものです。
      </p>
      <div class="footer__insta">
        <a href="https://www.instagram.com/tcs_exterior?igsh=bno2dmhlOTVjbW1n" target="_blank">
          <img src="/assets/img/icon_insta.png" alt="">
        </a>
      </div>
      <p class="footer__right">&copy; 2025 TOTAL CLEAN SERVICE.</p>
    </div>
  </Container>
</footer>

<style lang="scss">
@use "../styles/mixin" as *;
.footer{
  padding-top: 60px;
  padding-bottom: 36px;
  background-color: var(--color-white);
  @include sp {
    padding-top: 40px;
  }
}
.footer__inner{
  display: grid;
  grid-template-columns: 1fr 54px;
  row-gap: 60px;
  align-items: center;
  @include sp {
    display: block;
  }
}
.footer__text{
  grid-column: 1 / 2;
  grid-row: 1 / 2;
  color: var(--color-mine-shaft);
  font-size: 16px;
  font-family: var(--font-serif);
  @include sp {
    font-size: 14px;
  }
  > a{
    transition: opacity 0.3s ease;
    text-decoration: underline;
    @include hover{
      opacity: 0.7;
    }
  }
}
.footer__insta{
  grid-column: 2 / 3;
  grid-row: 1 / 2;
  > a{
    transition: opacity 0.3s ease;
    @include hover{
      opacity: 0.7;
    }
  }
  @include sp {
    margin-top: 40px;
    width: 45px;
    margin-left: auto;
    margin-right: auto;
  }
}
.footer__right{
  grid-column: 1 / 3;
  grid-row: 2 / 3;
  color: var(--color-mine-shaft);
  font-size: 14px;
  text-align: center;
  font-family: var(--font-serif);
  @include sp {
    margin-top: 60px;
    font-size: 12px;
  }
}
</style>