---
import Button from '../components/Button.astro';
import Image from '../components/Image.astro';
---

<section class="cv">
  <div class="cv__image">
    <Image FileName="img_cv" pcWidth={1439} pcHeight={324} spWidth={786} spHeight={340} />
  </div>
  <div class="cv__content">
    <h2>まずは、理想の暮らしをお聞かせください</h2>
    <div class="btnArea">
      <Button text="お問い合わせ" link="">
    </div>
  </div>
</section>

<style lang="scss">
@use "../styles/mixin" as *;
.cv {
  margin-top: 120px;
  position: relative;
  overflow: hidden;

  .cv__image {
    z-index: -1;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

    :global(img),:global(picture) {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }
  }
}
.cv__content{
  padding-top: 102px;
  padding-bottom: 108px;
  @include sp{
    padding: 40px 30px;
  }
  h2{
    color: var(--color-white);
    font-family: var(--font-mincho-bold);
    font-size: 24px;
    text-align: center;
    @include sp {
      font-size: 16px;
    }
  }
  .btnArea{
    margin-top: 25px;
    text-align: center;
  }
}

</style>