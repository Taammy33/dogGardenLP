---
interface Props {
  text: string;
  link: string;
}

const {
  text,
  link,
} = Astro.props;

---

<a href={link} class="button">{text}</a>

<style is:global lang="scss">
  @use "../styles/mixin" as *;
.button{
  position: relative;
  width: 100%;
  max-width: 348px;
  border-radius: 9999px;
  display: inline-block;
  padding-top: 16px;
  padding-bottom: 16px;
  color: var(--color-white);
  font-family: var(--font-serif);
  background-color: var(--color-dallas);
  font-size: 18px;
  transition: opacity 0.3s ease;
  @include sp {
    font-size: 16px;
  }
  @include hover {
    opacity: 0.7;
  }
  &::after{
    content: "";
    display: inline-block;
    position: absolute;
    background-image: url("/assets/img/icon_arrow.svg");
    width: 38px;
    height: 8px;
    background-repeat: no-repeat;
    background-size: cover;
    top: 50%;
    right: 30px;
    transform: translateY(-50%);
  }
}
</style>